{
  "name": "setup",
  "version": "1.0.0",
  "description": "setup experiment",
  "main": "src/index.js",
  "scripts": {
    "build": "BABEL_DISABLE_CACHE='1' NODE_ENV='production' webpack --progress -p",
    "clean": "trash '*.log' build coverage errorShots",
    "cov": "NODE_PATH='$PWD' istanbul cover _mocha -- --opts .mocha",
    "lint": "eslint *.js src",
    "prod": "NODE_ENV='production' webpack-dev-server --progress --colors -p",
    "start": "NODE_ENV='development' webpack-dev-server --inline --hot --progress --colors -d",
    "test": "NODE_PATH='$PWD' mocha --opts .mocha",
    "test:e2e": "wdio"
  },
  "author": "SÃ©bastien David",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "~6.5.0",
    "babel-core": "~6.16.0",
    "babel-eslint": "~7.0.0",
    "babel-loader": "~6.2.5",
    "babel-plugin-transform-class-properties": "~6.16.0",
    "babel-plugin-transform-remove-console": "~6.8.0",
    "babel-plugin-transform-remove-debugger": "~6.8.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-es2016": "~6.16.0",
    "babel-preset-es2017": "~6.16.0",
    "babel-preset-modern-browsers": "~5.1.0",
    "babel-preset-react": "~6.16.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-preset-react-optimize": "~1.0.1",
    "chai": "~3.5.0",
    "css-loader": "~0.25.0",
    "cssnano": "~3.7.5",
    "eslint": "~3.7.0",
    "eslint-config-airbnb": "~12.0.0",
    "eslint-import-resolver-webpack": "~0.6.0",
    "eslint-plugin-import": "~1.16.0",
    "eslint-plugin-jsx-a11y": "~2.2.2",
    "eslint-plugin-react": "~6.3.0",
    "extract-text-webpack-plugin": "~1.0.1",
    "html-loader": "~0.4.4",
    "html-webpack-plugin": "~2.22.0",
    "istanbul": "~1.1.0-alpha.1",
    "mocha": "~3.1.0",
    "moment": "~2.15.1",
    "node-sass": "~3.10.1",
    "normalize.css": "~4.2.0",
    "phantomjs-prebuilt": "~2.1.12",
    "postcss-loader": "~0.13.0",
    "proxyquire": "~1.7.10",
    "react": "~15.3.2",
    "react-addons-perf": "~15.3.2",
    "react-dom": "~15.3.2",
    "react-redux": "~4.4.5",
    "react-router": "~2.8.1",
    "redux": "~3.6.0",
    "redux-thunk": "~2.1.0",
    "sass-loader": "~4.0.2",
    "selenium-standalone": "~5.7.2",
    "sinon": "~1.17.6",
    "style-loader": "~0.13.1",
    "trash-cli": "~1.4.0",
    "wdio-dot-reporter": "0.0.6",
    "wdio-mocha-framework": "~0.4.3",
    "webdriverio": "~4.2.16",
    "webpack": "~1.13.2",
    "webpack-dashboard": "~0.2.0",
    "webpack-dev-server": "~1.16.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ],
        "plugins": [
          "transform-remove-debugger",
          "transform-remove-console"
        ]
      },
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    },
    "ignore": [
      "node_modules"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "import"
    ],
    "env": {
      "browser": true,
      "mocha": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.babel.js"
        }
      }
    },
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "no-console": 0,
      "import/no-extraneous-dependencies": 0,
      "react/jsx-filename-extension": 0
    }
  }
}
